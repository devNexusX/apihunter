			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run API Hunter with Spond Token",
			"type": "shell",
			"command": "C:/Users/305628/source/repos/apiHunter/.venv/Scripts/python.exe",
			"args": [
				"main.py",
				"${input:targetUrl}",
				"--spond-token", "${input:spondToken}",
				"--scan-common-paths",
				"--include-swagger",
				"--auto-save",
				"--format", "detailed",
				"--verbose"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
