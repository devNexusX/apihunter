{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run API Hunter",
			"type": "shell",
			"command": "C:/Users/305628/source/repos/apiHunter/.venv/Scripts/python.exe",
			"args": [
				"main.py",
				"${input:targetUrl}"
			],
			"isBackground": false,
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run API Hunter - Help",
			"type": "shell",
			"command": "C:/Users/305628/source/repos/apiHunter/.venv/Scripts/python.exe",
			"args": ["main.py", "--help"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run API Hunter - Demo",
			"type": "shell",
			"command": "C:/Users/305628/source/repos/apiHunter/.venv/Scripts/python.exe",
			"args": ["main.py", "https://httpbin.org", "--verbose"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run API Hunter with Authentication",
			"type": "shell",
			"command": "C:/Users/305628/source/repos/apiHunter/.venv/Scripts/python.exe",
			"args": [
				"main.py",
				"${input:targetUrl}",
				"--username", "${input:username}",
				"--password", "${input:password}",
				"--login-type", "${input:loginType}",
				"--verbose"
