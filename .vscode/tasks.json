	"inputs": [
		{
			"id": "targetUrl",
			"description": "Target URL to scan for API endpoints",
			"default": "https://httpbin.org",
			"type": "promptString"
		},
		{
			"id": "username",
			"description": "Username for authentication",
			"default": "",
			"type": "promptString"
		},
		{
			"id": "password",
			"description": "Password for authentication",
			"default": "",
			"type": "promptString"
		},
		{
			"id": "loginType",
			"description": "Login type",
			"default": "spond",
			"options": ["spond", "generic"],
			"type": "pickString"
		},
		{
			"id": "spondToken",
			"description": "Spond authentication token",
			"default": "",
			"type": "promptString"
		}
	]
}